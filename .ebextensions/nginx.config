files:
  "/etc/nginx/conf.d/elasticbeanstalk/01_custom_nginx.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
          listen 80;
          server_name studentperformance.ap-south-1.elasticbeanstalk.com;

          # Proxying root requests to the Flask application on port 80
          location / {
              proxy_pass http://127.0.0.1:80;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
          }

          # Adding custom route to proxy requests to the Flask app for /predictdata
          location /predictdata {
              proxy_pass http://127.0.0.1:80/predictdata;
              proxy_set_header Host $host;
              proxy_set_header X-Real-IP $remote_addr;
              proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
              proxy_set_header X-Forwarded-Proto $scheme;
          }

          # Handle missing favicon
          location = /favicon.ico {
              log_not_found off;
              access_log off;
          }
      }
