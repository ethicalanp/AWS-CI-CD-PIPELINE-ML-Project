server {
    listen 80;
    server_name studentperformance.ap-south-1.elasticbeanstalk.com;

    # Main route to proxy all requests to Flask app
    location / {
        proxy_pass http://127.0.0.1:80;  # Forward requests to Flask app
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Specifically route for /predictdata to Flask app (though this is already caught by main location block)
    location /predictdata {
        proxy_pass http://127.0.0.1:80/predictdata;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Optional: handle favicon.ico request
    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }
}
